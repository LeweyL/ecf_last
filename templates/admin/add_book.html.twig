{# templates/admin/add_book.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Ajouter un livre{% endblock %}

{% block body %}
    <h1>Ajouter un livre</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
        </div>

        <div class="form-group">
            {{ form_label(form.author) }}
            {{ form_widget(form.author) }}
        </div>

        <div class="form-group">
            {{ form_label(form.publicationYear) }}
            {{ form_widget(form.publicationYear) }}
        </div>

            

        <div class="form-group">
            {{ form_label(form.condition) }}
            {{ form_widget(form.condition) }}
        </div>

        <div class="form-group">
            {{ form_label(form.summary) }}
            {{ form_widget(form.summary) }}
        </div>

        <input type="hidden" name="book[availability]" value="1">

        <div class="form-group">
            <button type="submit" class="btn btn-primary">{{ button_label|default('Ajouter le livre') }}</button>
        </div>
    {{ form_end(form) }}

    <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary mt-3">Retour au tableau de bord</a>
{% endblock %}
