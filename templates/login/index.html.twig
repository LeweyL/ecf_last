{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1> {{"login_title"|trans}} </h1>
    <form action="{{ path('app_login') }}" method="post">
        <label for="username">{{"login_email"|trans}}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required>

        <label for="password">{{"login_password"|trans}}</label>
        <input type="password" id="password" name="_password" required>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/app_home"> #}

        <button type="submit">{{"login_button"|trans}}</button>
    </form>
{% endblock %}